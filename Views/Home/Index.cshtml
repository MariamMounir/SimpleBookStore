@model List<Products>

<h2>Product List</h2>
<a href="@Url.Action("Add", "Product")" class="btn btn-primary">Add New Product</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td>
                <td><img src="@product.ImageUrl" alt="@product.Name" width="50" /></td>
                <td>
                    <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>








